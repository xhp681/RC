@model AppSettingsModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="RedisConfigModel.Enabled" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="RedisConfigModel.Enabled" />
            <span asp-validation-for="RedisConfigModel.Enabled"></span>
        </div>
    </div>
    <nop-nested-setting asp-for="RedisConfigModel.Enabled">
        <div class="form-group row" id="redis-connection-string">
            <div class="col-md-3">
                <nop-label asp-for="RedisConfigModel.ConnectionString" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="RedisConfigModel.ConnectionString" />
                <span asp-validation-for="RedisConfigModel.ConnectionString"></span>
            </div>
        </div>
        <div class="form-group row" id="redis-database">
            <div class="col-md-3">
                <nop-label asp-for="RedisConfigModel.DatabaseId" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="RedisConfigModel.DatabaseId" />
                <span asp-validation-for="RedisConfigModel.DatabaseId"></span>
            </div>
        </div>
        <div class="form-group row" id="redis-caching">
            <div class="col-md-3">
                <nop-label asp-for="RedisConfigModel.UseCaching" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="RedisConfigModel.UseCaching" />
                <span asp-validation-for="RedisConfigModel.UseCaching"></span>
            </div>
        </div>
        <div class="form-group row" id="redis-data-protection">
            <div class="col-md-3">
                <nop-label asp-for="RedisConfigModel.StoreDataProtectionKeys" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="RedisConfigModel.StoreDataProtectionKeys" />
                <span asp-validation-for="RedisConfigModel.StoreDataProtectionKeys"></span>
            </div>
        </div>
        <div class="form-group row" id="redis-plugins">
            <div class="col-md-3">
                <nop-label asp-for="RedisConfigModel.StorePluginsInfo" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="RedisConfigModel.StorePluginsInfo" />
                <span asp-validation-for="RedisConfigModel.StorePluginsInfo"></span>
            </div>
        </div>
        <div class="form-group row" id="redis-exception">
            <div class="col-md-3">
                <nop-label asp-for="RedisConfigModel.IgnoreTimeoutException" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="RedisConfigModel.IgnoreTimeoutException" />
                <span asp-validation-for="RedisConfigModel.IgnoreTimeoutException"></span>
            </div>
        </div>
    </nop-nested-setting>
</div>
<script>
    $(document).ready(function () {
        $("#@Html.IdFor(model => model.RedisConfigModel.Enabled)").click(toggleRedis);
        toggleRedis();
    });

    function toggleRedis() {
        if ($('#@Html.IdFor(model => model.RedisConfigModel.Enabled)').is(':checked')) {
            $('#redis-connection-string').showField();
            $('#redis-database').showField();
            $('#redis-caching').showField();
            $('#redis-data-protection').showField();
            $('#redis-plugins').showField();
            $('#redis-exception').showField();
        } else {
            $('#redis-connection-string').hide();
            $('#redis-database').hide();
            $('#redis-caching').hide();
            $('#redis-data-protection').hide();
            $('#redis-plugins').hide();
            $('#redis-exception').hide();
        }
    }
</script>